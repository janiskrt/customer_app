<div class="col-md-12">
  <h4>Users table</h4>
<div class="table-responsive">
  <table class="table table-bordered table-hover" >
    <thead>
      <tr class="filters">
        <th>ID</th>
        <th>Avatar</th>
        <th>Name</th>
        <th>Surname</th>
        <th>Email</th>
        <th>Options</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <% if user.avatar.file? %>
            <td><%= image_tag user.avatar.url(:thumb) %></td>
          <% else %>
            <td><%= image_tag "user_thumb.jpg" %></td>
          <% end %>
          <td><%= user.name %></td>
          <td><%= user.surname %></td>
          <td><%= user.email %></td>
          <td>
            <%= link_to user do%> 
              <i class="fa fa-search" style="font-size: 18px"></i>
            <% end %>
            <%= link_to edit_user_path(user) do%>
              <i class="fa fa-pencil" style="font-size: 18px"></i>
            <% end %> 
            <%= link_to  user, method: :delete, data: { confirm: 'Are you sure?' } do%>
              <i class="fa fa-times" style="font-size: 18px"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
     </tbody>
    </table>
  </div>
</div>

