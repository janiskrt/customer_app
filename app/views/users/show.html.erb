<div class="container">
  <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title"> <%= @user.name %> <%= @user.surname %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-3 col-lg-3 " align="center"> 
            <%= image_tag @user.avatar.url, :class => "img-circle img-responsive"%>
          </div>
            <div class=" col-md-9 col-lg-9 "> 
              <table class="table table-user-information">
                <tbody>
                  <tr>
                    <td>First name:</td>
                    <td><%= @user.name %></td>
                  </tr>
                  <tr>
                    <td>Last name:</td>
                    <td><%= @user.surname %></td>
                  </tr>
                  <tr>
                    <td>Email</td>
                    <td><%= @user.email %></td>
                  </tr>
                  <tr>
                    <td>Status</td>
                    <td>Admin</td>
                  </tr>
                </tbody>
              </table>
              <a href="#" class="btn btn-primary">Customers</a>
              <a href="#" class="btn btn-primary">Applications</a>
            </div>
          </div>
        </div>
        <div class="panel-footer" style="height:55px">
          <span class="pull-right">
             <%= link_to edit_user_path(@user) do%>
              <i class="fa fa-pencil" style="font-size: 25px"></i>
            <% end %> 
            <%= link_to  @user, method: :delete, data: { confirm: 'Are you sure?' } do%>
              <i class="fa fa-times" style="font-size: 25px"></i>
            <% end %>
          </span>
        </div>
    </div>
  </div>
</div>
